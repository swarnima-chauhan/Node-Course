      <ul class="grid grid-cols-1 sm:grid-cols-2 gap-6">
  <% registeredHomes.forEach(home => { %>
    <li class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 overflow-hidden">
      <img src="<%= home.photoUrl %>" alt="<%= home.houseName %> photo" class="w-full h-48 object-cover">
      <div class="p-5">
        <h3 class="text-2xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
        <p class="text-gray-600 mb-1"><span class="font-medium">Location:</span> <%= home.location %></p>
        <p class="text-gray-600 mb-1"><span class="font-medium">Price:</span> ₹<%= home.price %> / night</p>
        <div class="flex items-center mt-2">
          <span class="text-yellow-400 text-lg mr-1">★</span>
          <span class="text-gray-700 font-semibold"><%= home.rating %></span>
        </div>
      </div>
    </li>
  <% }) %>
</ul>
    </main>
</body>
</html>